<div class='pure-g'>
  <div class="pure-u-1"> 
    <%= form_for @budget, html: { class: 'pure-form pure-form-stacked' } do |f| %>
        <h2 class='budget-name'> Edit Budget </h2> 
        <div class='pure-g top-margin'>
          <fieldset>
            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :name %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.text_field :name, class: 'one-hundred', required: true %>
                </div>
            </div>

            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :amount, 'Budget' %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.number_field :amount, value: (@budget.amount / 100.0).to_i, min: 1, class: 'one-hundred', required: true  %>
                    <!-- <span class='subtext'> Changes to the budget will not take effect until the next cycle. </span> -->
                </div>
            </div>

            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :reoccuring, 'Recurring?'  %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.check_box :reoccuring %>
                </div>
            </div>
          </fieldset>
        </div>

        <div class='top-margin'>
            <%= f.submit 'Save Changes', class: 'pure-button pure-button-primary one-hundred' %>
        </div>
    <% end %>
    <div class='top-margin'>
        <%= link_to 'Delete', budget_path(@budget), method: :delete, data: {confirm: 'Are you sure you want to delete this budget? This action cannot be undone.'}, class: 'pure-button pure-button-danger one-hundred' %>
    </div>
  </div>
</div>
