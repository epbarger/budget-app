<div class='pure-g'>
  <div class="pure-u-1"> 
    <%= form_for @budget, html: { class: 'pure-form pure-form-stacked' } do |f| %>
        <h2 class='budget-name'> New Budget </h2>  
        <div class='pure-g top-margin'>
          <fieldset style='width: 100%;'>
            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :name %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.text_field :name, class: 'one-hundred', required: true %>
                </div>
            </div>

            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :amount, 'Budget' %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.number_field :amount, min: 1, class: 'one-hundred', required: true  %>
                </div>
            </div>

            <div class='form-row'>
                <div class='pure-u-2-5'>
                    <%= f.label :reoccuring, 'Recurring?' %>
                </div>
                <div class='pure-u-3-5'>
                    <%= f.check_box :reoccuring %>
                </div>
            </div>
          </fieldset>
        </div>
        <div class='top-margin'>
            <%= f.submit "Create", class: 'pure-button pure-button-primary pull-right one-hundred' %>
        </div>
    <% end %>
  </div>
</div>
