<div class='pure-g'>
  <div class="pure-u-1"> 
    <h1 class="large-balance <%= 'negative' if @budget_cycle.current_balance < 0 %>"><%= cents_to_currency(@budget_cycle.current_balance) %></h1> 
    <h1> <%= @budget_cycle.name %> </h1>
    <p>
      <% if @budget_cycle.current_balance > 0 %>
        <div class='meter positive'>
          <span style='width: <%= ((@budget_cycle.unlocked_balance / @budget_cycle.period_balance.to_f) * 100.0) %>%;' class='meter-unlocked'></span>
          <span style='width: <%= (((@budget_cycle.amount_spent) / @budget_cycle.period_balance.to_f) * 100.0) %>%;' class='meter-spent overlay'></span>
        </div>
      <% else %>
        <div class='meter negative'>
          <span style='width: <%= ((@budget_cycle.unlocked_balance / @budget_cycle.period_balance.to_f) * 100.0) %>%;' class='meter-unlocked'></span>
          <span style='width: <%= (((@budget_cycle.amount_spent) / @budget_cycle.period_balance.to_f) * 100.0) %>%;' class='meter-spent overlay'></span>
        </div>
      <% end %>
    </p>
    <p> Unlocked <%= cents_to_currency(@budget_cycle.unlocked_balance) %> of <%= cents_to_currency(@budget_cycle.period_balance) %></p> 
    <p> Day <%= @budget_cycle.day_in_cycle %> of <%= @budget_cycle.number_of_days_in_cycle %></p> 
  </div>
  <div class="pure-u-1">
    <%= form_for @new_balance_event, url: budget_budget_cycle_balance_events_path(@budget, @budget_cycle.id), html: { class: 'pure-form' } do |f| %>
      <fieldset>
<!--         <%= f.label :amount, 'Enter Purchase' %> -->
        <%= f.number_field :amount, placeholder: '$$$', min: 0.01, step: 0.01, class: 'amount-field', required: true %>
        <%= f.text_field :note, placeholder: 'Note (Optional)', class: 'note-field' %>
        <%= f.submit 'Add', class: 'pure-button pure-button-primary' %>
      </fieldset>
    <% end %>
  </div>
  <div class="pure-u-1">
    <% @budget_cycle.balance_events.order("created_at DESC").each do |be| %>
      <% if be.amount.present? %>
        <p><%= time_ago_in_words(be.created_at) %> ago : <%= cents_to_currency(be.amount) %></p>
      <% end %>
    <% end %>
    
  </div>
  <div class="pure-u-1" style='align:'>
    <%= link_to "Back", budgets_path, class: 'pure-button' %>
    <%= link_to "Settings", edit_budget_path(@budget_cycle.budget), class: 'pure-button' %>
  </div>

</div>
